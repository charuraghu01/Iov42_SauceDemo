pipeline {
    agent any  // ✅ Allows running on any available node

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/charuraghu01/Iov42_SauceDemo.git'
            }
        }

        stage('Setup Node & Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Cypress Tests in Parallel') {
            parallel {
                stage('Run Tests on Chrome') {
                    agent { label 'chrome-node' }  // ✅ Change this if needed
                    steps {
                        sh 'npx cypress run --browser chrome'
                    }
                }
                stage('Run Tests on Firefox') {
                    agent { label 'firefox-node' }  // ✅ Change this if needed
                    steps {
                        sh 'npx cypress run --browser firefox'
                    }
                }
            }
        }

        stage('Generate Mochawesome Report') {
            steps {
                sh '''
                npx mochawesome-merge cypress/reports/*.json -o cypress/reports/merged-report.json
                npx mochawesome-report-generator cypress/reports/merged-report.json -o cypress/reports/
                '''
            }
        }

        stage('Archive Test Results') {
            steps {
                archiveArtifacts artifacts: 'cypress/reports/**', fingerprint: true
            }
        }

        stage('Publish Test Report') {
            steps {
                publishHTML(target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'cypress/reports/',
                    reportFiles: 'index.html',
                    reportName: 'Cypress Test Report'
                ])
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
